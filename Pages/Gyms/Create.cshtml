@page
@model Proiect.Pages.Gyms.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Gym</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Gym.Name" class="control-label"></label>
                <input asp-for="Gym.Name" class="form-control" />
                <span asp-validation-for="Gym.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gym.TrainerID" class="control-label">Trainer Name</label>
                <select asp-for="Gym.TrainerID" class="form-control" asp-items="ViewBag.TrainerID">
                </select>
                <span asp-validation-for="Gym.TrainerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gym.Adress" class="control-label"></label>
                <input asp-for="Gym.Adress" class="form-control" />
                <span asp-validation-for="Gym.Adress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gym.Price" class="control-label"></label>
                <input asp-for="Gym.Price" class="form-control" />
                <span asp-validation-for="Gym.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
